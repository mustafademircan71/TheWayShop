
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Log In</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active"> Contact Us </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Contact Us  -->
<div class="contact-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                <div class="contact-info-left">
                    <h2>Giriş Bilgisi</h2>
                    <p>Sisteme giriş için yandaki formu kullanınız. Henüz kayıt olmadıysanız <a href="/register" data-toggle="modal" data-target="#divNewUserForm">tıklayınız</a></p>

                </div>
            </div>
            <div class="col-lg-8 col-sm-12">
                <div class="contact-form-right">
                    <form id="contactForm">
                        <input type="hidden" />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="txtEmail" placeholder="Email giriniz">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="password" class="form-control" id="txtPassword" placeholder="Şiffe Giriniz">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="submit-button text-center">
                                    <button class="btn hvr-hover" id="btnLogIn" type="button">Giriş</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <p class="mb-1">
                    <a data-toggle="modal"
                       data-target="#divForgotPasswordUser"
                       style="cursor:pointer;color:blue;">Şifremi Unuttum</a>
                </p>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="divNewUserForm" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Kayıt Formu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmNewUser">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Email Adresi </label>
                            <input type="email" class="form-control" id="txtEmailNew" name="txtEmailNew" placeholder="Email">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Adı Soyadı</label>
                            <input type="text" class="form-control" id="txtFullNameNew" name="txtFullNameNew" placeholder="Adı Soyadı">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputPassword4">Şifre</label>
                            <input type="password" class="form-control" id="txtPasswordNew" name="txtPasswordNew" placeholder="Şifre">
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button id="btnSave" type="button" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="divForgotPasswordUser" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Şifremi Unuttum</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Email : </label>
                    <input id="txtEmailForgotPassword" type="text" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button id="btnSendPassword" type="button" class="btn btn-primary">Şifremi Gönder</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/userLogIn.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.js"></script>
}
@section styles{
    <link href="~/lib/sweetalert2/dist/sweetalert2.css" rel="stylesheet" />

    <style>
        .error {
            color: red;
        }
    </style>

}
